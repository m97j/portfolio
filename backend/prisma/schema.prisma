datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  category  String   // "projects" | "vlogs" | "notes"
  tags      String[] @db.Text
  tagString String?  // "<🔴[🖇🎨]>"와 같은 원형 문자열 (선택)
  summary   String?
  contentMd String   // markdown 본문
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visibility String  // "public" | "private"
  language  String   // "ko" | "en"
  githubUrl String?  // 코드 링크 (선택)
  coverUrl  String?  // 카드 이미지 (Blob Storage 등)
}
